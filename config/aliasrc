# Config files
alias edit="$EDITOR ~/.zshrc"
alias aedit="$EDITOR ~/.config/.aliasrc"
alias fedit="$EDITOR ~/.config/.functionrc"
alias vedit="$EDITOR ~/.vimrc"

# Navigation
alias repos="cd $REPOS"
alias notes="cd ~/Documents/notes"
alias dl="cd ~/Downloads"

# Repos specific
alias th="cd $REPOS/timharek.no"
alias vk="cd $REPOS/vestkontakt.no"

# Binary commands
alias intel="/usr/local/bin/idea"
alias speedtest="speedtest-cli"
alias yr="python3 $REPOS/p-yr/main.py"
alias gs="git status"
alias gua="git remote | xargs -L1 git push --all"
alias mv="mv -i"
alias cp="cp -i"
alias today="date +%F"

# Misc
alias cv-new="weasyprint https://timharek.no/resume"

# macOS specific
if [[ "$(uname)" == "Darwin" ]]; then
    alias temp="osx-cpu-temp"
    alias bu="brew update && brew upgrade"
    
    # Apps
    alias imgopt="open -a ImageOptim ."
fi

# UiB
alias uib="cd $UIB"
alias checklist="$REPOS/IT-Avd/checklist-py/checklist.sh"
alias uib-vpn="sudo openconnect --user=tan039 --cafile=/Users/tim/.cert/vpn3-uib-no.pem vpn3.uib.no"
alias jobbreg="python3 $REPOS/IT-Avd/bemanning-py/jobbreg.py"

# VK
alias vkas="ssh vk"
alias vkas-pull="vkas 'cd vestkontakt.no/public_html && git pull'"

# Deployment
alias th-deploy="bundle exec jekyll build && rsync -av --delete $REPOS/timharek.no/_site/ wyd:/var/www/timharek.no/html"
alias pic-deploy="bundle exec jekyll build && rsync -av --delete --iconv=utf-8-mac,utf-8 $REPOS/photos.timharek.no/_site/ wyd:/var/www/photos.timharek.no/html"
